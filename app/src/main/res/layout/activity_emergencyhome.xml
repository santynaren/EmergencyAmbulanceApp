<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nagajothy.smazee.emergency.Emergencyhome">

    <LinearLayout
        android:id="@+id/activity_emergencyhome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099d9"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Location Text "
                android:textSize="15sp"
                android:typeface="sans" />
        </android.support.v7.widget.CardView>

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:onClick="ambulance"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ambulance"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/pol" />

                        <TextView
                            android:id="@+id/ambulance_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ambulance"
                            android:layout_centerInParent="true"
                            android:paddingTop="10dp"
                            android:text="Police"
                            android:textColor="#FF1D15"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:onClick="police"
                        android:layout_width="0dp"
                        android:layout_height="150dp"

                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/police"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ambulancesample"
                            android:layout_centerInParent="true"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/police"
                            android:layout_centerInParent="true"
                            android:paddingTop="10dp"
                            android:text="Ambulance"
                            android:id="@+id/police_text"
                            android:textColor="#FF1D15"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <RelativeLayout
                        android:onClick="accident"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"

                        >

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
                        <ImageView
                           android:layout_gravity="center"
                            android:id="@+id/accident"
                            android:layout_width="100dp"
                            android:layout_height="75dp"

                            android:src="@drawable/accident" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/accident"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:text="Accident"
                            android:id="@+id/accident_text"
                            android:textColor="#FF1D15"
                            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:onClick="fire"
                        android:layout_height="150dp"

                        android:layout_weight="1">


                        <ImageView

                            android:id="@+id/fire"
                            android:src="@drawable/fireng"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                           />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fire"
                            android:layout_centerInParent="true"
                            android:paddingTop="10dp"
                            android:id="@+id/fire_text"
                            android:text="Fire Emergency"
                            android:textColor="#FF1D15"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:onClick="women"
                        android:layout_width="0dp"
                        android:layout_height="150dp"

                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/women"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/female" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/women"
                            android:layout_centerInParent="true"
                            android:paddingTop="10dp"
                            android:id="@+id/women_text"
                            android:text="Women Safety"
                            android:textColor="#FF1D15"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
            </android.support.v7.widget.CardView>
        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:menu="@menu/drawer_menu" />

</android.support.v4.widget.DrawerLayout>