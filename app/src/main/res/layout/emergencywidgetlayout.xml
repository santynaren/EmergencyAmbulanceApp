<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:onClick="ambulance"
            android:id="@+id/amb"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ambulance"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ambulancesample" />

            <TextView
                android:id="@+id/ambulance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ambulance"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:text="Ambulance"
                android:textColor="#FF1D15"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:onClick="police"
            android:layout_width="0dp"
            android:layout_height="150dp"

            android:layout_weight="1">

            <ImageView
                android:id="@+id/police"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/pol" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/police"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:text="Police"
                android:id="@+id/police_text"
                android:textColor="#FF1D15"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>